{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
  "lib": ["ES2020", "DOM"],
    "outDir": "out",
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
  "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
    ,
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", ".vscode-test"]
}