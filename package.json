{
  "name": "featureflow",
  "displayName": "FeatureFlow",
  "description": "Real-time Baseline compatibility checking for CSS and HTML features",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Linters",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "css",
    "html",
    "baseline",
    "compatibility",
    "web-features",
    "browser-support",
    "caniuse"
  ],
  "icon": "images/icon.png",
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "featureflow.generateReport",
        "title": "FeatureFlow: Generate Compatibility Report",
        "icon": "$(file-code)"
      },
      {
        "command": "featureflow.refreshDiagnostics",
        "title": "FeatureFlow: Refresh Diagnostics",
        "icon": "$(sync)"
      }
    ],
    "configuration": {
      "title": "FeatureFlow",
      "properties": {
        "featureflow.baselineLevel": {
          "type": "string",
          "default": "widely",
          "enum": [
            "widely",
            "newly"
          ],
          "enumDescriptions": [
            "Flag features that are not widely available (recommended for production)",
            "Flag features that are not newly or widely available (more permissive)"
          ],
          "description": "Minimum baseline level required for features"
        },
        "featureflow.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable real-time diagnostics for non-baseline features"
        },
        "featureflow.showHoverInfo": {
          "type": "boolean",
          "default": true,
          "description": "Show baseline information on hover"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "featureflow.generateReport",
          "when": "workspaceFolderCount > 0"
        },
        {
          "command": "featureflow.refreshDiagnostics"
        }
      ],
      "editor/context": [
        {
          "command": "featureflow.generateReport",
          "when": "resourceExtname =~ /\\.(css|scss|less|html)$/",
          "group": "featureflow"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^18.19.129",
    "@types/postcss-less": "^4.0.6",
    "@types/vscode": "^1.104.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.57.1",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "postcss": "^8.5.6",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.0",
    "web-features": "^0.8.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/featureflow"
  },
  "bugs": {
    "url": "https://github.com/yourusername/featureflow/issues"
  },
  "license": "MIT"
}
